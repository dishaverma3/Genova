<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="167dp"
    android:layout_height="266dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="3dp"
    android:clickable="true"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/discount_percentage"
            android:layout_width="48.36dp"
            android:layout_height="14.29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:text="72% Off"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="#54DAD5"/>

        <ImageView
            android:id="@+id/fav_icon"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@id/discount_percentage"
            app:layout_constraintBottom_toBottomOf="@id/discount_percentage"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="134dp"
            android:layout_height="134dp"
            tools:srcCompat="@drawable/spray_image_1"
            app:layout_constraintTop_toBottomOf="@id/discount_percentage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="28.4dp"
            />

        <TextView
            android:id="@+id/product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="SPRAY"
            android:textColor="#999999"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="SPRAY"
            android:textStyle="bold"
            android:textColor="#040404"
            app:layout_constraintTop_toBottomOf="@id/product_type"
            app:layout_constraintStart_toStartOf="@id/product_type" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="SPRAY"
            android:textStyle="bold"
            android:textColor="#040404"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toStartOf="@id/product_name" />

        <ImageView
            android:id="@+id/add_cart_icon"
            android:layout_width="20dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/ic_iconfinder_shopping_bag_172551"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>